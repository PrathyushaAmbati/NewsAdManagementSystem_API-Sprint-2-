@{
}

<td><a asp-controller="Customer" asp-action="ShowCustomerDetails" class="btn btn-info">Back to List</a></td>
<form method="post">
    <h2>Edit Customer Details</h2>
    <div>
        <label for="Custname">Full Name</label>
        <input type="text" class="form-control" asp-for="CustName" />
    </div>

    <div>
        <label for="EmailID">Email ID</label>
        <input type="text" class="form-control" asp-for="EmailID" />
    </div>
    <div>
        <label for="CustAddress">Address</label>
        <input type="text" class="form-control" asp-for="CustAddress" />
    </div>
    <div>
        <label for="CustContactNo">Mobile Number</label>
        <input type="text" class="form-control" asp-for="CustContactNo" />
    </div>
    <div>
        <label for="DOR">Registration Date</label>
        <input type="text" class="form-control" asp-for="DOR" />
    </div>

    <div>
        <label for="Pwd">Set Password</label>
        <input type="text" class="form-control" asp-for="Pwd" />
    </div>

    <input type="submit" value="Update" class="btn btn-primary" />

    <hr />

    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }

</form>