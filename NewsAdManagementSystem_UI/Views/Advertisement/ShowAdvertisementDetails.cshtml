@model IEnumerable<NewsAdManagementSystem_Entity.Models.AdvertisementDetailsClass>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
    <div class="col-12">
        <h3>Advertisement Details</h3>
        <hr />
    </div>

</div>
<div>@ViewBag.message</div>
<table class="table table-bordered table-hover table-light">
    <thead>
        <tr>
            <th>AdCode</th>
            <th>Page Number</th>
            <th>Page Location</th>
            <th>BWPage Cost</th>
            <th>ColorPage Cost</th>
            <th>Title</th>
           
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AdCode</td>
                <td>@item.PageNo</td>
                <td>@item.PageLocation</td>
                <td>@item.BWColorCost</td>
                <td>@item.ColorCost</td>
                <td>@item.Title</td>
                <td><a asp-controller="Advertisement" asp-action="EditAdvertisementDetails" asp-route-AdCode="@item.AdCode" class="btn btn-primary">Edit</a></td>
                <td><a asp-controller="Advertisement" asp-action="DeleteAdvertisementDetails" asp-route-AdCode="@item.AdCode" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
