@model IEnumerable<NewsAdManagementSystem_Entity.Models.EmployDetails>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
    <div class="col-12">
        <h3>Employee Details</h3>
        <hr />
    </div>
    
</div>
<div>@ViewBag.message</div>
<table class="table table-bordered table-hover table-light">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Full Name</th>
            <th>Contact Number</th>
            <th>EmailID</th>
            <th>Country</th>
            <th>State</th>
            <th>City</th>
            <th>Password</th>
            <th>Role</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmpID</td>
                <td>@item.EmpName</td>
                <td>@item.EmpContactNo</td>
                <td>@item.EmailID</td>
                <td>@item.Country</td>
                <td>@item.State</td>
                <td>@item.City</td>
                <td>@item.Pwd</td>
                <td>@item.Role</td>
                <td><a asp-controller="Employ" asp-action="EditEmployDetails" asp-route-EmpID="@item.EmpID" class="btn btn-primary">Edit</a></td>
                <td><a asp-controller="Employ" asp-action="DeleteEmployDetails" asp-route-EmpID="@item.EmpID" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
