@{
}
<div>
    <a class="btn btn-primary" asp-action="ShowEmployDetails">Show Employ Details</a>
</div>

<form method="post">
    <h2>Edit Employee Details</h2>
    <div>
        <label for="Empname">Full Name</label>
        <input type="text" class="form-control" asp-for="EmpName" />
    </div>
    <div>
        <label for="EmpContactNo">Mobile Number</label>
        <input type="text" class="form-control" asp-for="EmpContactNo" />
    </div>
    <div>
        <label for="EmailID">Email ID</label>
        <input type="text" class="form-control" asp-for="EmailID" />
    </div>
    <div>
        <label for="Country">Country</label>
        <input type="text" class="form-control" asp-for="Country" />
    </div>
    <div>
        <label for="State">State</label>
        <input type="text" class="form-control" asp-for="State" />
    </div>
    <div>
        <label for="City">City</label>
        <input type="text" class="form-control" asp-for="City" />
    </div>
    <div>
        <label for="Pwd">Set Password</label>
        <input type="text" class="form-control" asp-for="Pwd" />
    </div>

    <div>
        <label for="Role">Role</label>
        <input type="text" class="form-control" asp-for="Role" />
    </div>



    <input type="submit" value="Update" class="btn btn-primary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }


</form>